{
		"name": "transcripter",
		"publisher": "mr-konn",
		"displayName": "Transcripter",
		"description": "Simple and dumb transcription helper for macOS",
		"version": "0.0.1",
		"engines": {
				"vscode": "^1.38.0"
		},
		"categories": [
				"Other"
		],
		"activationEvents": [
				"onLanguage:markdown",
				"onCommand:mr-konn.transcripter.commands.togglePlay",
				"onCommand:mr-konn.transcripter.commands.backwards",
				"onCommand:mr-konn.transcripter.commands.forwards",
				"onCommand:mr-konn.transcripter.commands.jump",
				"onCommand:mr-konn.transcripter.commands.activate"
		],
		"main": "./out/extension.js",
		"contributes": {
				"configuration": {
						"title": "Transcripter",
						"properties": {
								"mr-konn.transcripter.config.resumeDelay": {
										"type": "number",
										"default": 5,
										"description": "A delay to rewind after stop"
								},
								"mr-konn.transcripter.config.defaultBackwardSeconds": {
										"type": "number",
										"default": 5,
										"description": "A default seconds to rewind"
								},
								"mr-konn.transcripter.config.defaultForwardSeconds": {
										"type": "number",
										"default": 5,
										"description": "A default seconds to forward"
								}
						}
				},
				"commands": [
						{
								"command": "mr-konn.transcripter.commands.activate",
								"title": "Transcripter: Start Transcription"
						},
						{
								"command": "mr-konn.transcripter.commands.backwards",
								"title": "Transcripter: Step Backwards"
						},
						{
								"command": "mr-konn.transcripter.commands.forwards",
								"title": "Transcripter: Step Forwards"
						},
						{
								"command": "mr-konn.transcripter.commands.jump",
								"title": "Transcripter: Jump to Time"
						},
						{
								"command": "mr-konn.transcripter.commands.togglePlay",
								"title": "Transcripter: Play/Stop Recording"
						}
				]
		},
		"repository": {
				"type": "git",
				"url": "https://github.com/konn/vscode-transcripter-macos"
		},
		"scripts": {
				"vscode:prepublish": "npm run compile",
				"compile": "tsc -p ./",
				"watch": "tsc -watch -p ./",
				"pretest": "npm run compile",
				"test": "node ./out/test/runTest.js"
		},
		"dependencies": {
				"@jxa/run": "1.3.0",
				"@jxa/types": "1.3.0"
		},  
		"devDependencies": {
				"@types/glob": "^7.1.1",
				"@types/mocha": "^5.2.6",
				"@types/node": "^10.12.21",
				"@types/vscode": "^1.38.0",
				"@jxa/global-type": "1.3.0",
				"glob": "^7.1.4",
				"mocha": "^6.1.4",
				"typescript": "^3.3.1",
				"tslint": "^5.12.1",
				"vscode-test": "^1.2.0"
		}
}
